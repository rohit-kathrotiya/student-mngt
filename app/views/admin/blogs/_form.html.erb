<%= form_with(model: [:admin, blog]) do |form| %>
  
  <%= render "admin/shared/error", model: blog %>

  <div class="form-group">
    <%= form.label :title %><br>
    <%= form.text_field :title, class: "form-control form-control-lg" %>
  </div>
  <div class="form-group">
    <%= form.label :content %><br>
    <%= form.text_area :content, class: "form-control form-control-lg" %>
  </div>
  <div class="form-group">
    <%= form.label :student_id %><br>
    <%= form.text_area :student_id, class: "form-control form-control-lg" %>
  </div>
  <div class="form-group">
    <%= form.submit class: "btn btn-primary btn-lg" %>
  </div>
  <div class="form-group">
    <%= link_to "Back", admin_blogs_path, class: "badge badge-primary" %>
  </div>

<% end %>