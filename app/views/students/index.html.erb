<h1> Student List </h1>

<p> <%= link_to "New Student", new_student_path %> </p>
<table>
    <thead>
        <tr>
            <th> First Name </th>
            <th> Last Name </th>
            <th> Email </th>
            <th> City </th>
            <th colspan="3"> Actions </th>
        </tr>
    </thead>
    <tbody>
        <% @students.each do |student| %>
            <tr>
                <td> <%= student.first_name %> </td>
                <td> <%= student.last_name %> </td>
                <td> <%= student.email %> </td>
                <td> <%= student.city %> </td>
                <td> <%= link_to "View", student %> </td>
            </tr>
        <% end %>
    </tbody>
</table>